{
  "name": "signalhub-backend",
  "version": "1.0.0",
  "description": "SignalHub Backend API",
  "scripts": {
    "dev": "python -m uvicorn app.main:app --reload --port 8000",
    "dev:safe": "bash ../scripts/backend-health-check.sh && python -m uvicorn app.main:app --reload --port 8000",
    "start": "python -m uvicorn app.main:app --port 8000",
    "test": "python -m pytest",
    "test:quick": "python -m pytest -x",
    "check": "bash ../scripts/backend-health-check.sh",
    "type-check": "python -m mypy app/",
    "lint": "python -m flake8 app/",
    "clean": "find . -type f -name '*.pyc' -delete && find . -type d -name '__pycache__' -delete",
    "restart": "pkill -f uvicorn && python -m uvicorn app.main:app --reload --port 8000",
    "logs": "tail -f logs/signalhub.log",
    "health": "curl -s http://localhost:8000/health",
    "install-deps": "pip install -r requirements.txt",
    "update-deps": "pip install --upgrade -r requirements.txt",
    "db:reset": "python backend/scripts/reset_db.py",
    "db:clear": "python backend/scripts/clear_db.py"
  },
  "keywords": ["api", "fastapi", "python", "signalhub"],
  "author": "SignalHub Team",
  "license": "MIT"
}
